{{!< default}}

<div class="container">
  <div class="row">
    <div class="col-lg-3">
      {{> related}}
    </div>
    <div class="col-lg-6">
      <div class="content-area">
        <main class="site-main">
          {{#post}}
            <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}} single">
              {{> post-header tag="h1" hide_link=true}}
              <div class="post-meta">
                <time class="post-meta-date" datetime="{{date format="YYYY-MM-DD"}}">
                  {{date published_at}}
                </time>
                <span class="post-meta-length">{{reading_time}}</span>
              </div>
              {{> post-media}}
              <div class="post-wrapper">
                <div class="post-content u-text-format">
                  {{content}}
                </div>
                {{> tags}}
                {{> share}}
              </div>
            </article>
            {{> author}}
            {{> post-navigation}}
            {{> disqus}}
          {{/post}}
        </main>
      </div>
    </div>
    <div class="col-lg-3">
      {{> widgets/widgets}}
    </div>
  </div>
</div>